{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {"view": {"stroke": ""}},
  "width": 600,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/YushanLinMonash/3719_A2/refs/heads/main/DATA/heat_Industry_state_TableE.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "Year",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2022,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == Year"}
  ],
  "layer": [
    {
      "mark": "rect",
      "encoding": {
        "x": {
          "field": "Jurisdiction",
          "type": "nominal",
          "axis": {
            "title": "Jurisdiction",
            "labelAngle": 0
          }
        },
        "y": {
          "field": "Industry",
          "type": "nominal",
          "axis": {"title": "Industry"}
        },
        "color": {
          "field": "Quantity",
          "type": "quantitative",
          "scale": {
            "scheme": "yellowgreen",
            "domain": [0, 200, 400, 600, 800, 1000, 1500]
          },
          "legend": {"title": "Energy Consumption (PJ)"}
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "fontSize": 12
      },
      "encoding": {
        "x": {
          "field": "Jurisdiction",
          "type": "nominal"
        },
        "y": {
          "field": "Industry",
          "type": "nominal"
        },
        "text": {
          "field": "Quantity",
          "type": "quantitative",
          "format": ".1f"
        },
        "color": {
          "condition": {
            "test": "datum['Quantity'] > 500",
            "value": "white"
          },
          "value": "black"
        }
      }
    }
  ]
}
