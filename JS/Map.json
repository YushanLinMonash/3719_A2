{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Energy Consumption by State over Time (2022)",
  "width": 600,
  "height": 400,
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/YushanLinMonash/3179_W9HW/refs/heads/main/js/ne_110m_au.json",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/YushanLinMonash/3719_A2/refs/heads/main/DATA/geo_consumption_state_year_TableC.csv",
          "format": {"type": "csv"}
        },
        "key": "Jurisdiction",
        "fields": ["Year", "Quantity"]
      }
    },
    {
      "filter": "datum.Year == 2022"
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "black",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "Quantity",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [50, 2000],
        "range": ["#f7fcb9", "#addd8e", "#a37731"] 
      },
      "title": "Energy Consumption (PJ)"
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {"field": "Quantity", "type": "quantitative", "title": "Energy Consumption (PJ)"}
    ]
  }
}
