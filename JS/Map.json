{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Energy Consumption by State over Time",
  "width": 800,
  "height": 400,
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/YushanLinMonash/3179_W9HW/refs/heads/main/js/ne_110m_au.json",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/YushanLinMonash/3719_A2/refs/heads/main/DATA/geo_consumption_state_year_TableC.csv",
          "format": {"type": "csv"}
        },
        "key": "Jurisdiction",
        "fields": ["Year", "Quantity"]
      }
    },
    {
      "filter": "datum.Year == year_brush"
    }
  ],
  "params": [
    {
      "name": "year_brush",
      "value": 2022, 
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2022,
        "step": 1, 
        "name": "Select Year: " 
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "black",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "Quantity",
      "type": "quantitative",
      "scale": {"type": "linear", "domain": [0, 7000]},
      "title": "Energy Consumption (PJ)"
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {"field": "Quantity", "type": "quantitative", "title": "Energy Consumption (PJ)"}
    ]
  }
}
