{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "vconcat": [
    {
      "title": "Energy Consumption by State Over Time",
      "width": 600,
      "height": 240,
      "data": {
        "url": "https://raw.githubusercontent.com/YushanLinMonash/3719_A2/refs/heads/main/DATA/geo_consumption_state_year_TableC.csv",
        "format": {"type": "csv"}
      },
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "scale": {"domain": {"param": "brush"}}, 
          "axis": {"title": "Year", "tickCount": 10}
        },
        "y": {
          "field": "Quantity",
          "type": "quantitative",
          "axis": {"title": "Energy Consumption (PJ)"}
        },
        "color": {
          "field": "Jurisdiction",
          "type": "nominal",
          "legend": {"title": "State"}
        }
      }
    },
    {
      "width": "container",
      "height": 60,
      "data": {
        "url": "https://raw.githubusercontent.com/YushanLinMonash/3719_A2/refs/heads/main/DATA/geo_consumption_state_year_TableC.csv",
        "format": {"type": "csv"}
      },
      "mark": "area",
      "params": [
        {
          "name": "brush",
          "select": {"type": "interval", "encodings": ["x"]} 
        }
      ],
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {"tickCount": 10, "title": "Select Year Range"}
        },
        "y": {
          "field": "Quantity",
          "type": "quantitative",
          "axis": {"tickCount": 3, "grid": false}
        },
        "color": {
          "field": "Jurisdiction",
          "type": "nominal",
          "legend": null 
        }
      }
    }
  ]
}

